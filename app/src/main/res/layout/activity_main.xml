<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.student.americanfootballscoreapp.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Team A"
                android:textColor="@android:color/holo_green_light"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/score_text_viewA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"

                android:layout_marginTop="10dp"
                android:text="0"
                android:textColor="@android:color/holo_green_dark"

                android:textSize="50sp" />

            <Button
                android:id="@+id/ta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@android:color/holo_orange_light"
                android:onClick="clickA"
                android:text="Touchdown"
                android:textAllCaps="false"
                android:textSize="15dp" />

            <Button
                android:id="@+id/fa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@android:color/holo_orange_light"
                android:onClick="clickA"
                android:text="Field Goal"
                android:textAllCaps="false"
                android:textSize="15dp" />

            <Button
                android:id="@+id/ea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@android:color/holo_orange_light"
                android:onClick="clickA"
                android:text="Extra Point"
                android:textAllCaps="false"
                android:textSize="15dp" />

            <Button
                android:id="@+id/sa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@android:color/holo_orange_light"
                android:onClick="clickA"
                android:text="Safety"
                android:textAllCaps="false"
                android:textSize="15dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="15dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Team B"
                android:textColor="@android:color/holo_green_light"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/score_text_viewB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:text="0"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="50sp" />

            <Button
                android:id="@+id/TB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@android:color/holo_orange_light"
                android:onClick="clickB"
                android:text="Touchdown"
                android:textAllCaps="false"
                android:textSize="15dp" />

            <Button
                android:id="@+id/FB"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@android:color/holo_orange_light"
                android:onClick="clickB"
                android:text="Field Goal"
                android:textAllCaps="false"
                android:textSize="15dp" />

            <Button
                android:id="@+id/EB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@android:color/holo_orange_light"
                android:onClick="clickB"
                android:text="Extra Point"
                android:textAllCaps="false"
                android:textSize="15dp" />

            <Button
                android:id="@+id/SB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@android:color/holo_orange_light"
                android:onClick="clickB"
                android:text="Safety"
                android:textAllCaps="false"
                android:textSize="15dp" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/resetBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="40dp"
        android:background="@android:color/holo_green_light"
        android:onClick="clickA"
        android:text="Reset" />
</LinearLayout>
